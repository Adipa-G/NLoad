<Window x:Class="NLoad.App.LoadTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:NLoad.App"
        Title="NLoad" Height="300" Width="300">
    <Window.DataContext>
        <app:LoadTestViewModel/>
    </Window.DataContext>
    <Grid>

        <Button Content="Start" Command="{Binding RunLoadTestCommand}" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="90"/>

        <WrapPanel>
            <StackPanel HorizontalAlignment="Left" Height="100" Width="150" VerticalAlignment="Top">
                <Label Content="Throughput" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Label Content="{Binding CurrentThroughput, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Height="100" Width="150" VerticalAlignment="Top">
                <Label Content="Iterations" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Label Content="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
            </StackPanel>
        </WrapPanel>

    </Grid>
</Window>
