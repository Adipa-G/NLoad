<Window x:Class="NLoad.App.LoadTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:NLoad.App"
        Title="NLoad" Height="300" Width="300">
    <Window.DataContext>
        <app:LoadTestViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Content="Run Toad Test" Command="{Binding RunLoadTestCommand}" HorizontalAlignment="Left" Margin="100,213,0,0" VerticalAlignment="Top" Width="94"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Width="150" Margin="10,10,0,0" VerticalAlignment="Top">
            <Label Content="Last Throughput" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="{Binding CurrentThroughput, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="3.25,-0.231" FontSize="36"/>
        </StackPanel>
    </Grid>
</Window>
